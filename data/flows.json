    {
        "id": "process_event",
        "type": "function",
        "z": "afef7fa2637a5035",
        "name": "Transform → 3rd Party Payload",
        "func": "let apiKey = env.get(\"EXTERNAL_API_KEY\");\n\n// Extract fields\nlet event = msg.payload;\n\n// Time selection\nlet isoTime = event?.tagInventoryEvent?.lastSeenTime || event?.timestamp || new Date().toISOString();\nlet timeMs = Date.parse(isoTime);\nif (isNaN(timeMs)) timeMs = Date.now();\n\n// Construct payload exactly as required\nmsg.payload = {\n    attributes: {\n        time: isoTime\n    },\n    event_type_uid: \"ed857b63-e1ef-4aa5-911e-c453408708e4\",\n    camera_id: event.hostname,   // Reader hostname\n    time_ms: timeMs\n};\n\n// Prepare headers\nmsg.headers = {\n    \"content-type\": \"application/json\",\n    \"x-api-auth\": apiKey  // Must be set in Node-RED env\n};\n\n// Store retry count\nmsg.retry = msg.retry || 0;\nreturn msg;",
        "outputs": 1,
        "timeout": "",

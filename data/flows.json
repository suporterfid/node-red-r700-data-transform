    {
        "id": "5191c79f59fa6ebb",
        "type": "function",
        "z": "afef7fa2637a5035",
        "name": "verify payload",
        "func": "// If payload is missing entirely\nif (msg.payload === null || msg.payload === undefined) {\n    return null;   // stop flow\n}\n\n// If payload is an empty string\nif (typeof msg.payload === \"string\" && msg.payload.trim() === \"\") {\n    return null;   // stop flow\n}\n\n// If payload is an empty array\nif (Array.isArray(msg.payload) && msg.payload.length === 0) {\n    return null;   // stop flow\n}\n\n// If payload is an empty object\nif (typeof msg.payload === \"object\" && !Array.isArray(msg.payload)) {\n    if (Object.keys(msg.payload).length === 0) {\n        return null;   // stop flow\n    }\n}\n\n// Otherwise, payload is valid → continue\nreturn msg;\n",
        "outputs": 1,
        "timeout": 0,
        "noerr": 0,
